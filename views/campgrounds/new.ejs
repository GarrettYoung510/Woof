<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 class="text-center">Create a new Campground</h1>
    <!-- will refactor styles later -->
    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds/" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="name"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="image"
            placeholder="image url"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="description"
            placeholder="description"
            required
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary">Submit</button>
        </div>
      </form>
      <a href="/campgrounds" class="text-center">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
