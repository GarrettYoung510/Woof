<% include ../partials/header %>

<h3 style="text-align: center;" class="mb-3 mt-4">Edit Comment</h3>
<div class="formContainer">
  <div style="margin: auto">
    <form action="/dogparks/<%= dogPark_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control col-md-10 col-lg-10 float-left mb-3" type="text" name="comment[text]"
          value="<%= comment.text %>" required />
        <button class="btn col-md-2 col-lg-2 float-right mb-4">
          Submit <i class="fas fa-sign-in-alt"></i>
        </button>
      </div>
