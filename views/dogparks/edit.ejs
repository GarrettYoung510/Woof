<% include ../partials/header %>

<h3 style="text-align: center;" class="mb-3 mt-4">Edit <%= DogPark.name %></h3>
<div class="formContainer">
  <div style="margin: auto">
    <form action="/dogparks/<%= DogPark._id %>?_method=PUT" method="POST">
      <div class="form-group mt-3">
        <input class="form-control" type="text" name="DogPark[name]" value="<%= DogPark.name %>" required />
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="DogPark[image]" value="<%= DogPark.image %>" required />
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="DogPark[description]" value="<%= DogPark.description %>"
          required />
      </div>
      <div class="form-group">
        <button class="btn float-right">Submit</button>
        <br>
      </div>
    </form>
    <a href="/dogparks" class=><i class="fas fa-long-arrow-alt-left"></i> Go Back</a>
  </div>
</div>

<div class="footerForms">
  <% include ../partials/footer %>
</div>