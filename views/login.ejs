<% include ./partials/header %>

<h3 style="text-align: center;" class="mb-3 mt-4">Login</h3>
<div class="formContainer w-50">
  <div style="margin: auto" class="form-group mt-3">
    <form action="/login" method="post">
      <input
        class="form-control col-md-9 col-lg-9 float-left mb-3"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="form-control col-md-9 col-lg-9 float-left mb-3"
        type="password"
        name="password"
        placeholder="password"
      />
      <button class="btn col-md-2 col-lg-2 float-right mb-4">
        Login <i class="fas fa-sign-in-alt"></i>
      </button>
      <br />
      <br />
      <br />
      <br />
      <br />
      <br />
    </form>
  </div>
</div>

